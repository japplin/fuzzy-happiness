<com.CardMemorizer.android.Card xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:gravity="center" >

	<ImageView
		android:id="@+id/card_front"
		android:layout_width="@dimen/card_width"
		android:layout_height="@dimen/card_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:scaleType="fitCenter" />

	<ImageView
		android:id="@+id/card_back"
		android:layout_width="@dimen/card_width"
		android:layout_height="@dimen/card_height"
		android:layout_alignLeft="@id/card_front"
		android:layout_alignTop="@id/card_front"
		android:scaleType="fitCenter"
		android:src="@drawable/cardback_blue"
		android:visibility="gone" />

</com.CardMemorizer.android.Card>