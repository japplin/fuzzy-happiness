<?xml version="1.0" encoding="utf-8"?>
<com.CardMemorizer.android.Card xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/card_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/card_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cardback_blue"
        android:visibility="gone" />
    
    <ImageView 
        android:id="@+id/card_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selected_card_border"
        android:visibility="gone"/>

</com.CardMemorizer.android.Card>